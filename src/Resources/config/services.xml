<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="AulaSoftwareLibre\DDD\BaseBundle\Command\CreateEventStreamCommand">
            <argument id="Prooph\EventStore\EventStore" type="service" />
            <tag name="console.command" />
        </service>

        <service id="Prooph\ServiceBus\CommandBus" alias="prooph_service_bus.default_command_bus" />
        <service id="Prooph\ServiceBus\EventBus" alias="prooph_service_bus.default_event_bus" />
        <service id="Prooph\ServiceBus\QueryBus" alias="prooph_service_bus.default_query_bus" />
    </services>
</container>
